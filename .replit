modules = ["python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["glibcLocales", "xcodebuild", "zlib"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow]]
name = "Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind=0.0.0.0:5000 --reuse-port --workers=1 --threads=2 --timeout=120 app:app"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 38993
externalPort = 3000

[[ports]]
localPort = 46539
externalPort = 3001

[deployment]
deploymentTarget = "vm"
run = ["gunicorn", "--bind=0.0.0.0:5000", "--reuse-port", "--workers=1", "--threads=2", "--timeout=120", "app:app"]
